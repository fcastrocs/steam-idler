<link rel="stylesheet" type="text/css" href="../static/css/index.css?v=2">
<script src="/static/js/index.js?v=2"></script>

<div id="body">
    <div id="slider-wrap">
        <div id="slider-nav">
            <a href="#slide-1" class="slider-btn"></a>
            <a href="#slide-2" class="slider-btn"></a>
            <a href="#slide-3" class="slider-btn"></a>
        </div>
        <div id="slider">
            <div id="slides">
                <div class="slider-item" id="slide-1">
                    <div class="slide-title">Stats</div>
                    <div class="feature-item stats-item">
                        <div><span id="idled-hours"></span> idled hours</div>
                        <div>Serving <span id="accounts-count"></span> steam accounts</div>
                    </div>
                    <div class="slide-title">Steam account related features</div>
                    <div id="features">
                        <div class="feature-col">
                            <div class="feature-item">
                                Idle any game in your library
                            </div>
                            <div class="feature-item">
                                Farm your trading cards
                            </div>
                            <div class="feature-item">
                                Activate free promo or free to play games
                            </div>
                            <div class="feature-item">
                                Change nickname
                            </div>
                            <div class="feature-item">
                                Change avatar
                            </div>
                        </div>

                        <div class="feature-col">
                            <div class="feature-item">
                                Idle up to 32 games per account
                            </div>
                            <div class="feature-item">
                                Redeem cdkeys
                            </div>
                            <div class="feature-item">
                                Change status (Invisible, Online, Away, Busy)
                            </div>
                            <div class="feature-item">
                                Clear previous aliases
                            </div>
                            <div class="feature-item">
                                Change privacy settings
                            </div>
                        </div>
                    </div>
                </div>
                <div class="slider-item" id="slide-2">
                    <div class="slide-title">Website features</div>
                    <div class="feature-col">
                        <div class="feature-item">
                            100% VAC safe (allowed by Valve)
                        </div>
                        <div class="feature-item">
                            Multiple accounts support
                        </div>
                        <div class="feature-item">
                            Auto-Restarter - accounts only offline when steam is offline
                        </div>
                        <div class="feature-item">
                            Mobile auth / Email guard account support
                        </div>
                        <div class="feature-item">
                            one-click card farmer
                        </div>
                    </div>
                </div>
                <div class="slider-item" id="slide-3">
                    <div class="slide-title">Easy to use dashboard</div>
                    <img id="slider-3-img" src="/static/images/dashboard1.png" height="90%" alt="">
                </div>
            </div>
        </div>
    </div>

    <!-- LOGIN -->
    <form id="login-form">
        <p>Login</p>
        <div class="text-success" id="login-message">{{{loginMessage}}}</div>
        <div class="alert alert-danger" hidden></div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Username</span>
                </div>
                <input type="text" name="username" class="form-control" value="{{{recoverUser}}}" required>
            </div>
        </div>

        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Password</span>
                </div>
                <input type="password" name="password" class="form-control" required>
            </div>
        </div>
        <div class="float-right">
            <button type="button" class="btn btn-secondary" id="recover-btn">Recover</button>
            <button type="submit" class="btn btn-primary" id="signin-button">Sign in</button>
        </div>
    </form>

    <!-- REGISTER -->
    <form id="register-form">
        <p>Register - Invite only</p>
        <div class="alert alert-success" hidden></div>
        <div class="alert alert-danger" hidden></div>
        <div id="register-inputs-box">
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Username</span>
                    </div>
                    <input type="text" name="username" class="form-control" required>
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Password</span>
                    </div>
                    <input type="password" name="password" class="form-control" required>
                    <div class="input-group-append">
                        <span class="input-group-text show-pass">
                            <span>Show</span>
                        </span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Email</span>
                    </div>
                    <input type="email" name="email" class="form-control" required>
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Invite Code</span>
                    </div>
                    <input type="text" name="invitecode" class="form-control" value="{{{invitecode}}}" required>
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <div class="text-warning">
                        For security reasons, you will not be able to change this URL.
                        <a href="https://steamcommunity.com/id/me/tradeoffers/privacy" target="_blank"
                            class="text-success">
                            Get it here</a>
                    </div>
                    <div class="input-group-prepend">
                        <span class="input-group-text">Trade URL</span>
                    </div>
                    <input type="text" name="tradeurl" class="form-control" required>
                </div>
            </div>
            <div class="float-right">
                <button type="submit" class="btn btn-primary" id="register-button">Register</button>
            </div>
        </div>
    </form>

    <!-- RECOVER ACCOUNT -->
    <form id="recover-form">
        <p>Recover account</p>
        <div class="alert alert-success" hidden></div>
        <div class="alert alert-danger" hidden></div>
        <div id="recover-form-box">
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Email</span>
                    </div>
                    <input type="email" name="recoverEmail" class="form-control" required>
                </div>
            </div>
            <div class="float-right">
                <button type="submit" class="btn btn-primary float-right" id="recover-button">Recover</button>
            </div>
        </div>
    </form>



    <!-- CHANGE PASSWORD -->
    <form id="changepass-form">
        <p>Recover account</p>
        <div class="alert alert-danger" hidden></div>
        <div class="form-group" hidden>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Username</span>
                </div>
                <input type="text" name="recoverUsername" class="form-control" value="{{{recoverUser}}}" required>
            </div>
        </div>

        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Password</span>
                </div>
                <input type="password" name="recoverPassword" class="form-control" required>
            </div>
        </div>


        <div class="form-group">
            <div>Retype password</div>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Password</span>
                </div>
                <input type="password" name="recoverPassword2" class="form-control" required>
            </div>
        </div>

        <div class="form-group" hidden>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Token</span>
                </div>
                <input type="text" name="recoverToken" class="form-control" value="{{{recoverToken}}}" required>
            </div>
        </div>

        <div class="float-right">
            <button type="submit" class="btn btn-primary" id="changepass-button">Change password</button>
        </div>
    </form>
</div>