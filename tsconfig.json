{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "./dist",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/@types",
      "src/@types",
    ],
  },
  "include": [
    "src"
  ],  
}